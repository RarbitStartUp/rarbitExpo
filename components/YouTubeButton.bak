import React, { useState } from 'react';
import { View, Button, WebView, StyleSheet } from 'react-native';
import DraggableModal from 'react-native-modal-draggable';

export const YouTubeButton = () => {
  const [modalVisible, setModalVisible] = useState(false);

  return (
    <View style={styles.container}>
      <Button title="Open YouTube Video" onPress={() => setModalVisible(true)} />
      <DraggableModal
        isVisible={modalVisible}
        onSwipeOut={() => setModalVisible(false)}
        swipeThreshold={200}
      >
        <View style={styles.modalContainer}>
          <WebView
            source={{ uri: 'https://www.youtube.com/embed/VIDEO_ID' }} // Replace VIDEO_ID with your YouTube video ID
            style={styles.webview}
          />
          <Button title="Close" onPress={() => setModalVisible(false)} />
        </View>
      </DraggableModal>
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
  },
  modalContainer: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
    marginTop: 22, // Adjust this value if needed
  },
  webview: {
    width: '100%',
    height: 300, // Adjust the height as needed
  },
});

